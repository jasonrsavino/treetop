{
  "form": {
    "include()": {
      "pattern": "organisms-form",
      "with": {
        "attributes": {
            "Attribute()": {
                "class": ["confirm-form", "confirmation"],
                "method": ["post"],
                "id": ["confirm-form"]
            }
        },
        "children": {
          "join()": [
            "This action cannot be undone.",
            {
              "include()": {
                "pattern": "atoms-container",
                "with": {
                    "has_parent": true,
                    "attributes": {
                        "Attribute()": {
                            "id": ["edit-actions"],
                            "class": ["form-actions"]
                        }
                    },
                    "children": {
                        "join()": [
                        {
                            "include()": {
                                "pattern": "atoms-input",
                                "with": {
                                    "attributes": {
                                        "Attribute()": {
                                            "type": ["submit"],
                                            "value": ["Delete"],
                                            "class": ["btn", "btn-primary", "js-form-submit", "form-submit"],
                                            "name": ["op"],
                                            "id": ["edit-submit"]
                                        }
                                    }
                                },
                                "only": true
                            }
                        },
                        "<a href=\"/nibh\" class=\"button\" data-drupal-selector=\"edit-cancel\" id=\"edit-cancel\" hreflang=\"en\">Cancel</a>"
                        ]
                    }
                },
                "only": true
              }
            }
          ]
        }
      }
    }
  }
}
